<div class="form-horizontal">
  <%= form_with model: library, class: "form-horizontal" do |form| %>
    <div class="form-group has-feedback has-success">
      <%= form.label :name, class: "col-sm-2 control-labelAddress" do %>
        Name*
      <% end %>
      <div class="col-sm-10">
        <%= form.text_field :name, placeholder: "The name of the Library", class: "form-control" %>
        <span class="glyphicon glyphicon-ok form-control-feedback"></span>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :address, class: "col-sm-2 control-label" do %>
        Address
      <% end %>
      <div class="col-sm-10">
        <%= form.text_field :address, placeholder: "The address of the Library", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :phone, class: "col-sm-2 control-label" do %>
        Phone
      <% end %>
      <div class="col-sm-10">
        <%= form.text_field :phone, placeholder: "The phone number of the Library", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.button :type, class: "btn btn-primary" do %>
          Save changes
        <% end %>
      </div>
    </div>
  <% end %>
</div>