<main role="main" class="container mt-4">
  <h1>Authors</h1>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>
          Name
          <br><small class="small not-bold">(Click on name for editing)</small>
        </th>
        <th class="vtop">Books</th>
      </tr>
    </thead>
    <tbody>
       <% @authors.each do |author| %>
        <tr>
          <td>
            <turbo-frame id="author-<%= author.id %>">
              <%= link_to edit_author_path(author), method: :get do %>
                <span role="button"><%= author.name %></span>
              <% end %>
            </turbo-frame>
          </td>
          <td>
            <ul>
              <% author.books.each do |book| %>
                <li><%= book.title %></li>
              <% end %>
            </ul>
          </td>
        </tr>
      <% end %> 
    </tbody>
  </table>
</main>